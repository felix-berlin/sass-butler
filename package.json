    "scss random number function",
    "scss type checking functions",
    "scss px to rem function",
    "scss breakpoint function",
    "scss str starts with function",
    "scss str ends with function",
    "scss str contains function",
    "scss str replace function",
    "scss escape svg function",
    "scss strip unit function",
    "scss number invert function"

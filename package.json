    "stylelint-config-standard-scss": "6.1.0",
    "stylelint-declaration-block-no-ignored-properties": "2.6.0",
    "stylelint-order": "6.0.1",
    "stylelint-scss": "4.3.0",
    "glob": "8.1.0",
    "jest": "29.4.2",
    "sass-true": "7.0.0"
  }

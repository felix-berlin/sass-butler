    }
  ],
  "files": [
    "*.scss"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "sassDoc": "sassdoc mixins/ functions/",
    "lint": "stylelint \"**/*.{sass,scss}\"",
